{
    "name": "specsmd",
    "displayName": "specsmd extension",
    "description": "Dashboard sidebar for browsing AI-DLC memory-bank artifacts",
    "version": "0.0.2",
    "publisher": "fabriqaai",
    "repository": {
        "type": "git",
        "url": "https://github.com/fabriqaai/specsmd.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/memory-bank",
        "workspaceContains:**/.specsmd"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "specsmd",
                    "title": "specsmd",
                    "icon": "resources/extension_icon.svg"
                }
            ]
        },
        "views": {
            "specsmd": [
                {
                    "id": "specsmdExplorer",
                    "name": "Explorer",
                    "when": "specsmd.isProject",
                    "type": "webview"
                },
                {
                    "id": "specsmdWelcome",
                    "name": "Welcome",
                    "when": "!specsmd.isProject",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "specsmd.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "specsmd.openFile",
                "title": "Open File"
            },
            {
                "command": "specsmd.revealInExplorer",
                "title": "Reveal in Explorer"
            },
            {
                "command": "specsmd.copyPath",
                "title": "Copy Path"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "specsmd.refresh",
                    "when": "view == specsmdExplorer",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile -- --production",
        "compile": "tsc -p ./ && tsc -p ./tsconfig.webview.json && node esbuild.webview.mjs",
        "compile:ext": "tsc -p ./",
        "compile:webview": "tsc -p ./tsconfig.webview.json && node esbuild.webview.mjs",
        "typecheck:webview": "tsc -p ./tsconfig.webview.json",
        "watch": "tsc -watch -p ./",
        "watch:webview": "node esbuild.webview.mjs --watch",
        "pretest": "npm run compile && npm run compile:test",
        "compile:test": "tsc -p ./tsconfig.test.json",
        "test": "mocha ./out-test/**/*.test.js",
        "test:vscode": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.24.0",
        "eslint": "^8.54.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "@lit/context": "^1.1.6",
        "js-yaml": "^4.1.0",
        "lit": "^3.3.2"
    }
}
