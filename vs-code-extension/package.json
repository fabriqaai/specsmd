{
    "name": "specsmd",
    "displayName": "specsmd extension",
    "description": "Dashboard sidebar for browsing AI-DLC memory-bank artifacts",
    "version": "0.0.1",
    "publisher": "specsmd",
    "repository": {
        "type": "git",
        "url": "https://github.com/fabriqaai/specsmd.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/memory-bank",
        "workspaceContains:**/.specsmd"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "specsmd",
                    "title": "specsmd",
                    "icon": "resources/favicon.svg"
                }
            ]
        },
        "views": {
            "specsmd": [
                {
                    "id": "specsmdTree",
                    "name": "Memory Bank",
                    "when": "specsmd.isProject"
                },
                {
                    "id": "specsmdWelcome",
                    "name": "Welcome",
                    "when": "!specsmd.isProject",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "specsmd.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "specsmd.openFile",
                "title": "Open File"
            },
            {
                "command": "specsmd.revealInExplorer",
                "title": "Reveal in Explorer"
            },
            {
                "command": "specsmd.copyPath",
                "title": "Copy Path"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "specsmd.refresh",
                    "when": "view == specsmdTree",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "specsmd.openFile",
                    "when": "view == specsmdTree && viewItem =~ /file/",
                    "group": "navigation"
                },
                {
                    "command": "specsmd.revealInExplorer",
                    "when": "view == specsmdTree",
                    "group": "navigation"
                },
                {
                    "command": "specsmd.copyPath",
                    "when": "view == specsmdTree",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run compile:test",
        "compile:test": "tsc -p ./tsconfig.test.json",
        "test": "mocha ./out-test/**/*.test.js",
        "test:vscode": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.54.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "js-yaml": "^4.1.0"
    }
}
